class Solution {
    public String reverseWords(String s) {
        String words[] = s.split(" ");
    //    String res = "";
        StringBuilder res = new StringBuilder();    
        for(int i=0;i<words.length;i++)
        {
            for(int j=words[i].length()-1;j>=0;j--)
            {
                res.append(words[i].charAt(j)); 
            }
            if(i!=words.length-1)
            res.append(" ");
        }
        return res.toString();
    }
}
